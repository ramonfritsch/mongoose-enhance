{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"declaration": true,
		"outDir": "./lib",
		"esModuleInterop": true,
		"incremental": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/__tests__/*", "**/__tests_utils__/*"]
}
