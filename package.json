{
	"name": "mongoose-enhance",
	"version": "3.0.3",
	"description": "Helpful Mongoose enhancements",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"files": [
		"lib/**/*"
	],
	"scripts": {
		"dev:test": "jest --watch",
		"dev:type": "tsc --pretty -w --skipLibCheck --noEmit",
		"build": "rimraf ./lib && tsc",
		"test": "jest",
		"postinstall": "patch-package",
		"prepare": "yarn build",
		"prepublishOnly": "yarn test"
	},
	"author": "Ramon Fritsch <ramonfritsch@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"lodash": "^4.17.15",
		"mongoose": "^5",
		"mongoose-beautiful-unique-validation": "^7.1.1",
		"mongoose-shortid-nodeps": "^0.6.5",
		"mongoose-strip-html-tags": "^0.0.1",
		"normalize-url": "^5",
		"p-limit": "^3",
		"patch-package": "^6.4.7",
		"postinstall-postinstall": "^2.1.0",
		"ucfirst": "^1",
		"validator": "^13"
	},
	"jest": {
		"preset": "ts-jest",
		"roots": [
			"<rootDir>/src"
		],
		"collectCoverageFrom": [
			"src/**/*.{js,jsx,ts,tsx}",
			"!src/**/*.d.ts"
		],
		"testEnvironment": "node",
		"transform": {
			"^.+\\.(t|j)sx?$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"devDependencies": {
		"@types/jest": "^29.4.0",
		"@types/lodash": "^4.14.191",
		"jest": "^29.5.0",
		"jest-cli": "^29.5.0",
		"jest-watch-typeahead": "^2.2.2",
		"mongodb-memory-server": "^8",
		"mongoose-tsgen": "8.4.7",
		"prettier": "^2.8.4",
		"rimraf": "^4.4.0",
		"ts-jest": "^29.0.5",
		"typescript": "^4.9.5"
	}
}
